<?php	include ('get-news.php');	global $language;	$curr_lang = $language->language;	//$nid = $_GET['id'];	//$ncategory = $_GET['category'];	$max_total_stories = 5;	$stories_count = 1;	?>	<div class="row" id="news-section-1">	<?php foreach($news_items as $item) {		$in = array("<![CDATA[","]]>","Investing.com â€“ ");		$out = array("","","");		$id = value_in('NewsID', $item);		$category = value_in('Category', $item);		if ($category==""){$category = "Other";}		$NewsDate = value_in('Date', $item);		$date = date("d/m/Y", strtotime($NewsDate));		$time = date("G:i:s", strtotime($NewsDate));		$title = value_in('Title', $item);		$title = str_replace($in,$out,$title);		$body = value_in('Body', $item);		$body_o = value_in('Body', $item);		$start = strpos($body, '<a href="http://www.investing.com"');		$body = str_replace($in,$out,$body);		$body = substr($body, 0,$start);		$body = str_replace('<a href="http://www.investi','',$body);		$body = str_replace('Investing.com - ','',$body);		$body = str_replace('Investing.com -- ','',$body);		$body = str_replace('Investing.com','',$body);		$image_and_url = value_in('image', $body_o);		$image_url = value_in('url', $image_and_url);		$image = str_replace(' ','_',$category);		$wrapped = wordwrap($body_o, 170);		$lines = explode("\n", $wrapped);		$teaser = $lines[0] . '...';		$teaser = str_replace('\n','',$teaser);		$teaser = str_replace('<br>','',$teaser);		?>		<?php if($stories_count < $max_total_stories AND $category!="Stock Market" AND $category!="Economic Indicators") { ?>			  <div class="col-md-3">				  <div class="news-item">					<!-- <div class="news-image" style="background-image: url(/traders-room/news/images/<?php echo $image.'_'.$stories_count.'.jpg' ?>)"></div> -->                    <div class="news-image" style="background-image: url(<?php echo $image_url ?>)"></div>					<div class="title">						<a href="/<?php echo $curr_lang ?>/news?nid=<?php echo $id ?>"><?php echo $title ?></a>					</div>					<div class="date">					  <?php echo $date.' '. $time . ' GMT ' ?>					</div>					<a href="/<?php echo $curr_lang ?>/news?nid=<?php echo $id ?>" class="news-read-more">Read more <i class="fa fa-angle-right"></i></a>				  </div>			  </div>		<?php			$stories_count++;		} ?>	<?php }?></div>